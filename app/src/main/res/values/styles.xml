<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/randomail_blue</item>
        <item name="colorPrimaryDark">@color/randomail_blue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <!-- Support library compatibility -->
    </style>

    <style name="whiteText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#eee</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- No action bar activity theme. -->
    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>
